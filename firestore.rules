rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função auxiliar para verificar se o usuário está autenticado
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Função auxiliar para verificar se é o próprio usuário
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Regras para a coleção Users
    match /Users/{userId} {
      // Permite leitura se estiver autenticado
      allow read: if isSignedIn();
      
      // Permite criação apenas se for o próprio usuário
      allow create: if isOwner(userId);
      
      // Permite atualização apenas se for o próprio usuário
      allow update: if isOwner(userId);
      
      // Permite exclusão apenas se for o próprio usuário
      allow delete: if isOwner(userId);
    }
    
    // Outras coleções - ajuste conforme necessário
    match /{document=**} {
      allow read, write: if false; // Bloqueia tudo por padrão
    }
  }
}
